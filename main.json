{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.6.18.56646",
      "templateHash": "5557852775530674482"
    }
  },
  "parameters": {
    "primaryRegion": {
      "type": "string",
      "defaultValue": "eastus2"
    },
    "resourceGroupRegion": {
      "type": "string",
      "defaultValue": "[deployment().location]"
    },
    "vnets": {
      "type": "array"
    }
  },
  "resources": [
    {
      "copy": {
        "name": "resourceGroups",
        "count": "[length(parameters('vnets'))]"
      },
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "[parameters('vnets')[copyIndex()].resourceGroupName]",
      "location": "[parameters('resourceGroupRegion')]",
      "tags": "[parameters('vnets')[copyIndex()].resourceGroupTags]",
      "metadata": {
        "description": "Resource groups for all resources"
      }
    },
    {
      "copy": {
        "name": "deployVNets",
        "count": "[length(parameters('vnets'))]"
      },
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "[format('{0}-VNet{1}', deployment().name, copyIndex())]",
      "resourceGroup": "[parameters('vnets')[copyIndex()].resourceGroupName]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "subnets": {
            "value": "[parameters('vnets')[copyIndex()].subnets]"
          },
          "vnet_AddressSpace": {
            "value": "[parameters('vnets')[copyIndex()].addressSpace]"
          },
          "vnet_Location": {
            "value": "[parameters('primaryRegion')]"
          },
          "vnet_Name": {
            "value": "[parameters('vnets')[copyIndex()].name]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.6.18.56646",
              "templateHash": "10446577676927074755"
            }
          },
          "parameters": {
            "vnet_Name": {
              "type": "string"
            },
            "vnet_AddressSpace": {
              "type": "string"
            },
            "vnet_Location": {
              "type": "string"
            },
            "subnets": {
              "type": "array"
            }
          },
          "variables": {
            "copy": [
              {
                "name": "subnets_temp",
                "count": "[length(parameters('subnets'))]",
                "input": "[array(parameters('subnets')[copyIndex('subnets_temp')])]"
              }
            ]
          },
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks",
              "apiVersion": "2020-11-01",
              "name": "[parameters('vnet_Name')]",
              "location": "[parameters('vnet_Location')]",
              "tags": "[resourceGroup().tags]",
              "properties": {
                "copy": [
                  {
                    "name": "subnets",
                    "count": "[length(parameters('subnets'))]",
                    "input": {
                      "name": "[parameters('subnets')[copyIndex('subnets')].name]",
                      "properties": {
                        "addressPrefix": "[parameters('subnets')[copyIndex('subnets')].addressSpace]"
                      }
                    }
                  }
                ],
                "addressSpace": {
                  "addressPrefixes": [
                    "[parameters('vnet_AddressSpace')]"
                  ]
                }
              }
            }
          ]
        }
      },
      "dependsOn": [
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', parameters('vnets')[copyIndex()].resourceGroupName)]"
      ],
      "metadata": {
        "description": "VNets and subnets.  The first VNet is the hub."
      }
    },
    {
      "copy": {
        "name": "nsgs",
        "count": "[length(parameters('vnets'))]"
      },
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "[format('{0}-NSGs-for-VNet{1}', deployment().name, copyIndex())]",
      "resourceGroup": "[parameters('vnets')[copyIndex()].resourceGroupName]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "nsg_Location": {
            "value": "[parameters('primaryRegion')]"
          },
          "nsg_Subnets": {
            "value": "[parameters('vnets')[copyIndex()].subnets]"
          },
          "nsg_VNet": {
            "value": "[parameters('vnets')[copyIndex()].name]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.6.18.56646",
              "templateHash": "11552952914182133130"
            }
          },
          "parameters": {
            "nsg_Location": {
              "type": "string"
            },
            "nsg_Subnets": {
              "type": "array"
            },
            "nsg_VNet": {
              "type": "string"
            }
          },
          "resources": [
            {
              "condition": "[contains(parameters('nsg_Subnets')[copyIndex()], 'nsgName')]",
              "copy": {
                "name": "networkSecurityGroup",
                "count": "[length(parameters('nsg_Subnets'))]"
              },
              "type": "Microsoft.Network/networkSecurityGroups",
              "apiVersion": "2019-11-01",
              "name": "[if(contains(parameters('nsg_Subnets')[copyIndex()], 'nsgName'), parameters('nsg_Subnets')[copyIndex()].nsgName, format('Foo{0}', copyIndex()))]",
              "location": "[parameters('nsg_Location')]",
              "tags": "[resourceGroup().tags]",
              "properties": {
                "securityRules": []
              }
            },
            {
              "condition": "[contains(parameters('nsg_Subnets')[copyIndex()], 'nsgName')]",
              "copy": {
                "name": "nsgSubnet",
                "count": "[length(parameters('nsg_Subnets'))]",
                "mode": "serial",
                "batchSize": 1
              },
              "type": "Microsoft.Network/virtualNetworks/subnets",
              "apiVersion": "2021-08-01",
              "name": "[format('{0}/{1}', parameters('nsg_VNet'), if(contains(parameters('nsg_Subnets')[copyIndex()], 'nsgName'), parameters('nsg_Subnets')[copyIndex()].name, format('Bar{0}', copyIndex())))]",
              "properties": {
                "addressPrefix": "[parameters('nsg_Subnets')[copyIndex()].addressSpace]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', if(contains(parameters('nsg_Subnets')[copyIndex()], 'nsgName'), parameters('nsg_Subnets')[copyIndex()].nsgName, format('Foo{0}', copyIndex())))]"
                }
              },
              "dependsOn": [
                "networkSecurityGroup"
              ]
            }
          ]
        }
      },
      "dependsOn": [
        "deployVNets",
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', parameters('vnets')[copyIndex()].resourceGroupName)]"
      ],
      "metadata": {
        "description": "NSGs"
      }
    },
    {
      "copy": {
        "name": "hub2SpokePeer",
        "count": "[length(range(1, length(parameters('vnets'))))]"
      },
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "[format('{0}-Peer-Outbound-{1}}}', deployment().name, range(1, length(parameters('vnets')))[copyIndex()])]",
      "resourceGroup": "[parameters('vnets')[0].resourceGroupName]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "peer_LocalVnetName": {
            "value": "[parameters('vnets')[0].name]"
          },
          "peer_ForeignVnetName": {
            "value": "[parameters('vnets')[range(1, length(parameters('vnets')))[copyIndex()]].name]"
          },
          "peer_allowGatewayTransit": {
            "value": false
          },
          "peer_useRemoteGateways": {
            "value": false
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.6.18.56646",
              "templateHash": "12692009949874482402"
            }
          },
          "parameters": {
            "peer_LocalVnetName": {
              "type": "string"
            },
            "peer_ForeignVnetName": {
              "type": "string"
            },
            "peer_allowGatewayTransit": {
              "type": "bool"
            },
            "peer_useRemoteGateways": {
              "type": "bool"
            }
          },
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
              "apiVersion": "2021-08-01",
              "name": "[format('{0}/{1}', parameters('peer_LocalVnetName'), parameters('peer_ForeignVnetName'))]",
              "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": "[parameters('peer_allowGatewayTransit')]",
                "useRemoteGateways": "[parameters('peer_useRemoteGateways')]",
                "remoteVirtualNetwork": {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('peer_ForeignVnetName'))]"
                },
                "remoteAddressSpace": {
                  "addressPrefixes": "[reference(resourceId('Microsoft.Network/virtualNetworks', parameters('peer_ForeignVnetName')), '2021-08-01').addressSpace.addressPrefixes]"
                }
              }
            }
          ]
        }
      },
      "dependsOn": [
        "deployVNets",
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', parameters('vnets')[0].resourceGroupName)]"
      ],
      "metadata": {
        "description": "Spoke to hub peerings"
      }
    },
    {
      "copy": {
        "name": "spoke2HubPeer",
        "count": "[length(range(1, length(parameters('vnets'))))]"
      },
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "[format('{0}-Peer-Inbound-{1}}}', deployment().name, range(1, length(parameters('vnets')))[copyIndex()])]",
      "resourceGroup": "[parameters('vnets')[0].resourceGroupName]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "peer_LocalVnetName": {
            "value": "[parameters('vnets')[range(1, length(parameters('vnets')))[copyIndex()]].name]"
          },
          "peer_ForeignVnetName": {
            "value": "[parameters('vnets')[0].name]"
          },
          "peer_allowGatewayTransit": {
            "value": false
          },
          "peer_useRemoteGateways": {
            "value": false
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.6.18.56646",
              "templateHash": "12692009949874482402"
            }
          },
          "parameters": {
            "peer_LocalVnetName": {
              "type": "string"
            },
            "peer_ForeignVnetName": {
              "type": "string"
            },
            "peer_allowGatewayTransit": {
              "type": "bool"
            },
            "peer_useRemoteGateways": {
              "type": "bool"
            }
          },
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
              "apiVersion": "2021-08-01",
              "name": "[format('{0}/{1}', parameters('peer_LocalVnetName'), parameters('peer_ForeignVnetName'))]",
              "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": "[parameters('peer_allowGatewayTransit')]",
                "useRemoteGateways": "[parameters('peer_useRemoteGateways')]",
                "remoteVirtualNetwork": {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('peer_ForeignVnetName'))]"
                },
                "remoteAddressSpace": {
                  "addressPrefixes": "[reference(resourceId('Microsoft.Network/virtualNetworks', parameters('peer_ForeignVnetName')), '2021-08-01').addressSpace.addressPrefixes]"
                }
              }
            }
          ]
        }
      },
      "dependsOn": [
        "deployVNets",
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', parameters('vnets')[0].resourceGroupName)]"
      ],
      "metadata": {
        "description": "Hub to spoke peerings"
      }
    }
  ]
}